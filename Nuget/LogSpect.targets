<?xml version="1.0" encoding="utf-8"?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003" ToolsVersion="4.0">
  <UsingTask TaskName="LogSpectRewriterTask" AssemblyFile="$(MSbuildThisFileDirectory)..\tools\LogSpectRewriter.exe" />
  
  <PropertyGroup>
    <LogSpectDependsOn>
      $(LogSpectDependsOn);
      CodeContractRewrite
    </LogSpectDependsOn>
  </PropertyGroup>
  
  <Target Name="LogSpectTarget" AfterTargets="CoreCompile" DependsOnTargets="$(LogSpectDependsOn)">
    <LogSpectRewriterTask AssemblyPath="@(IntermediateAssembly)" References="@(ReferencePath)" />
  </Target>
</Project>